@{
    Layout = null;
}
@model ForgotPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TEKNİK MARKET | ŞİFRENİ Mİ UNUTTUN </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/admin/css/adminlte.min.css">

    <style>
        .field-validation-error{
            color:red;
        }

    </style>

</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <h1><b>TEKNİK</b>MARKET</h1>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Şifrenizi mi unuttunuz? Burada kolayca yeni bir şifre alabilirsiniz.</p>
                <form id="forgotpasswordform">

                    @Html.AntiForgeryToken()

                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>

                    <span asp-validation-for="Email"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Adi" type="text" class="form-control" placeholder="Adi">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>

                    <span asp-validation-for="Adi"></span>

                    <div class="input-group mb-3">
                        <input asp-for="Soyadi" type="text" class="form-control" placeholder="Soyadi">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>

                    <span asp-validation-for="Soyadi"></span>


                    <div class="row">
                        <div class="col-12">
                            <button id="forgotpassword" type="button" class="btn btn-primary btn-block">Yeni Şifre İsteği</button>
                        </div>
                        <!-- /.col -->
                        <span id="mesaj"></span>
                    </div>
                </form>
                <p class="mt-3 mb-1">
                    <a href="/Admin/User/LogIn2">Login</a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="/admin/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/admin/js/adminlte.min.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script>
        $(document).ready(
            function() {
                $("#forgotpassword").click(
                    function() {
                        var model ={
                            Email:$("#Email").val(),
                            Adi: $("#Adi").val(),
                            Soyadi: $("#Soyadi").val()
                        }

                        var token = $('input[name="__RequestVerificationToken"]').val();

                        if($("#forgotpasswordform").valid())
                        {
                            $.ajax({
                                url:"/Admin/User/ForgotPassword",
                                method:"post",
                                data: { __RequestVerificationToken:token, model:model },
                                dataType: "json",
                                success:function(r){
                                    if(r.result){
                                        $("#mesaj").html(r.mesaj);
                                    }
                                },
                                error: function () {

                                }

                            });
                        }


                    }
                )
            }


        )






    </script>


</body>
</html>
